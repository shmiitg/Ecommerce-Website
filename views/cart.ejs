<div class="cart-page">
    <% if(session.cart && session.cart.totalQty) { %>
        <div class="cart-top">
            <div class="cart-img">
                <img src="/images/cart-black.png" alt="">
            </div>
            <div class="order-title">
                <h3>Order Summary</h3>
            </div>
        </div>
        <hr>
        <div class="cart-middle">
            <table>
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    <% let stocks=Object.values(session.cart.items) %>
                        <% stocks.forEach(stock=>{%>
                            <tr>
                                <td class="first-column">
                                    <img src="/images/<%= stock.item.image %> " alt="">
                                    <div class="right">
                                        <p>
                                            <%= stock.item.name %>
                                        </p>
                                        <a href="/cart/delete/<%= stock.item._id %>" class="remove-btn">Remove</a>
                                    </div>
                                </td>
                                <td class="second-column">
                                    <div class="left">
                                        <p>
                                            <%= stock.qty %>
                                        </p>
                                    </div>
                                    <div class="right">
                                        <a href="/cart/increase/<%= stock.item._id %>" class="change">
                                            <i class="fas fa-sort-up"></i>
                                        </a>
                                        <a href="/cart/decrease/<%= stock.item._id %>" class="change">
                                            <i class="fas fa-sort-down"></i>
                                        </a>
                                    </div>
                                </td>
                                <td>
                                    $ <%= stock.qty*stock.item.price %>.00
                                </td>
                            </tr>
                            <% })%>
                </tbody>
            </table>
        </div>
        <hr>
        <div class="cart-bottom">
            <div class="amount">
                <h4>Total Amount:</h4>
                <h4 id="total-amount">
                    $ <%=session.cart.totalPrice %>.00
                </h4>
            </div>
            <% if(user){ %>
                <form id="order" action="/orders" method="POST">
                    <div class="user-inputs">
                        <input name="phone" type="text" placeholder="Phone Number">
                        <input name="address" type="text" placeholder="Address">
                    </div>
                    <a onclick="document.querySelector('#order').submit()" class="btn" style="margin: 20px 0;">Order Now
                        &#8594</a>
                </form>
                <% } else { %>
                    <div><a href="/account/login" class="btn">Login to order &#8594</a></div>
                    <% } %>
        </div>
        <% } else { %>
            <div class="empty-cart">
                <img src="/images/emptycart.png" alt="">
                <p>Your cart is empty</p>
                <a class="btn" href="/products">Start Shopping &#8594</a>
            </div>
            <% } %>
</div>